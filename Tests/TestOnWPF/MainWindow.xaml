<Window x:Class="TestOnWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestOnWPF"
        mc:Ignorable="d"        
        Height="800" Width="1200"
        WindowStyle="None"    
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    
    <Border Background="#E6D5B8"
            CornerRadius="20">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="75"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" 
                    Grid.ColumnSpan="2"
                    Background="#1B1A17">
            </Border>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       HorizontalAlignment="Center"
                       Text="Wheels and Bills"
                           Foreground="White"
                           FontSize="50"
                           Style="{StaticResource ResourceKey=InterFont}">
            </TextBlock>

            <Border Grid.Row="1"                   
                    Grid.Column="0">
                
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                        <GradientStop Color="#F0A500" Offset="0.0"/>
                        <GradientStop Color="#E45826" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                
                <ListBox Background="Transparent" 
                         HorizontalContentAlignment="Stretch">
                    <ListBoxItem Padding="21,15,21,0" 
                                 HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Grid.ColumnSpan="2"                                                                
                                    Height="200" 
                                    CornerRadius="20"
                                    Background="White">
                                
                                <!--<Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#E8E9ED" Offset="0."/>
                                        <GradientStop Color="#C0C3CC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>-->

                                <Image Grid.Column="1"
                                       Margin="150,0,-150,0"
                                       Width="350" 
                                       RenderOptions.BitmapScalingMode="HighQuality"                                                                     
                                       Source="/Cars/renault-kaptur-vnedorozhnik-siniy-goluboy-fioletovyy-10.jpg">
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,25,185,150"/>
                                    </Image.Clip>
                                </Image>
                            </Border>
                            
                            <StackPanel Margin="0,20,0,10"
                                        HorizontalAlignment="Center"
                                        TextBlock.FontWeight="Bold">
                                
                                <TextBlock 
                                           DockPanel.Dock="Top"
                                           Text="Renault"                                          
                                           Foreground="#E45826"                                         
                                           FontSize="30"                                         
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock                                          
                                           Text="Logan"
                                           Foreground="Black"
                                           Margin="0,0,0,10"
                                           FontSize="25"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock 
                                           Margin="0,0,0,45"
                                           Text="25 шт"
                                           Foreground="Gray"                                        
                                           FontSize="18"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock                                        
                                           Text="1 880 000 ₽"
                                           Foreground="#E45826"                                          
                                           FontSize="22"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </ListBoxItem>

                    <ListBoxItem Padding="21,15,21,0" 
                                 HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0"
                                    Grid.ColumnSpan="2"                                                                
                                    Height="200" 
                                    CornerRadius="20"
                                    Background="White">

                                <!--<Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#E8E9ED" Offset="0."/>
                                        <GradientStop Color="#C0C3CC" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>-->

                                <Image Grid.Column="1"
                                       Margin="150,0,-150,0"
                                       Width="350" 
                                       RenderOptions.BitmapScalingMode="HighQuality"                                                                     
                                       Source="/Cars/renault-logan-sedan-seryy-10.png">
                                    <Image.Clip>
                                        <RectangleGeometry Rect="0,25,185,150"/>
                                    </Image.Clip>
                                </Image>
                            </Border>

                            <StackPanel Margin="0,20,0,10"
                                        HorizontalAlignment="Center"
                                        TextBlock.FontWeight="Bold">

                                <TextBlock 
                                           DockPanel.Dock="Top"
                                           Text="Renault"                                          
                                           Foreground="#E45826"                                         
                                           FontSize="30"                                         
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock                                          
                                           Text="Logan"
                                           Foreground="Black"
                                           Margin="0,0,0,10"
                                           FontSize="25"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock 
                                           Margin="0,0,0,45"
                                           Text="25 шт"
                                           Foreground="Gray"                                        
                                           FontSize="18"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                                <TextBlock                                        
                                           Text="1 880 000 ₽"
                                           Foreground="#E45826"                                          
                                           FontSize="22"
                                           Style="{StaticResource ResourceKey=InterFont}">
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </ListBoxItem>



                </ListBox>
            </Border>
        </Grid>
        
        

    </Border>
</Window>
