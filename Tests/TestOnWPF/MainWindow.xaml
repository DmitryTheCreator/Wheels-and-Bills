                                                             From="0" To="30"
                                                             Duration="0:0:.3"/>                                 
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ListBox.Triggers>-->
                    
                    <!--<ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListBox.ItemContainerStyle>-->
                </ListBox>
            </Border>
        </Grid>
        
        

    </Border>
</Window>
